<div class="user-profile">
  <div class="icon text-center">
    <img src="<%= gravatar_url(@user, size: 100) %>" alt="" class="img-circle">
  </div>
  <div class="name text-center">
    <h1><%= @user.name %></h1>
  </div>
  <div class="status text-center">
    <ul>
      <li>
        <div class="status-label">INTEREST</div>
        <div id="interest_count" class="status-value">
          <%= @count_interest %>
        </div>
      </li>
      <li>
        <div class="status-label">RECOMMEND</div>
        <div id="recommend_count" class="status-value">
          xxx
        </div>
      </li>
    </ul>
  </div>
</div>
<%= render 'rests/rests', rests: @rests %>
</div>